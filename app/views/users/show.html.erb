<% provide(:title, @user.name) %>
<aside class="col-md-4 col-md-offset-3">
    <section class="user_info">
    <h1>
        <%= @user.name %>
    </h1>
    </section>
</aside>
<div class="row">
    <div class="col-lg-8 col-md-offset-2">
        <% if @user.combo.any? %>
            <h3>投稿 (<%= @user.combo.count %>)</h3>
            <ol class="combos">
                <%= render @combos %>
            </ol>
            <%= paginate @combos %>
        <% else %>
            <p>投稿はありません。</p>
        <% end %>
    </div>
</div>