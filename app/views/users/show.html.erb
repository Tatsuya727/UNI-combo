<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
        <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
        </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <% if @user.combo.any? %>
            <h3>combos (<%= @user.combo.count %>)</h3>
            <ol class="combos">
                <%= render @combos %>
            </ol>
            <%= paginate @combos %>
        <% end %>
    </div>
</div>